
#include <ctype.h>

int main() {
    FILE *fp;
    char filename[100], ch;
    int lines = 0, words = 0, chars = 0;
    int inWord = 0;

    printf("Enter filename: ");
    scanf("%s", filename);

    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("Error: Cannot open file %s\n", filename);
        return 1;
    }

    while ((ch = fgetc(fp)) != EOF) {
        chars++;  // count every character

        if (ch == '\n')
            lines++;  // count lines

        if (isspace(ch) || ch == '\n' || ch == '\t') {
            inWord = 0;  // word ended
